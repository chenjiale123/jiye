/* pages/data/data.wxss */
page{
  width: 100%;
  height: 100%;
}
.contain{
  width: 100%;
  height: 100%;
}


.top{
  width: 100%;
  height: 80rpx;
  background-color: #fff;
  border-bottom: 1px solid  rgba(25, 31, 37, 0.12);
  vertical-align: middle;
  line-height: 80rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  margin-top: 100rpx;
}
.top>text{
  
font-size: 28rpx;
font-family: PingFangSC-Regular, PingFang SC;
font-weight: 400;
color: rgba(0, 0, 0, 0.4);
margin-right: 16rpx;
}
.schtype{
  width: 100%;
  padding: 0 30rpx;
  background-color: #fff;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 96rpx;
  border: 1px solid  rgba(25, 31, 37, 0.12);
}

.schtype>text{
  
font-size: 34rpx;
font-family: PingFangSC-Regular, PingFang SC;
font-weight: 400;
color: #191F25;
}
.schtype>.right{
  vertical-align: middle;
 line-height: 96rpx;
 position: relative;
}
.select{
  width: 406rpx;
  height: 520rpx;
  background: #FFFFFF;
  box-shadow: 0px 2px 6px 0px rgba(0, 0, 0, 0.2);
  position: absolute;
  right: 0;
  top: 80rpx;
  z-index: 999999999;
  overflow: auto;
}
.select>text{
display: block;
width: 100%;
height: 20%;
text-align: center;
line-height: 100rpx;

font-size: 28rpx;
font-family: PingFangSC-Medium, PingFang SC;
font-weight: 500;
color: #191F25;
border-bottom: 1px solid #eee;
}
.schtype>.right>text{

  font-size: 34rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(25, 31, 37, 0.28);
  vertical-align: middle;
  margin-right: 50rpx;
 
}
.schtype>.right>image{
  width: 24rpx;
  height: 24rpx;
  position: relative;
  vertical-align: middle;
}
.kk{
  
font-size: 34rpx;
font-family: PingFangSC-Regular, PingFang SC;
font-weight: 400;
color: rgba(25, 31, 37, 0.28);
text-align: right!important;
padding: 0!important;
}
.down{
  width: 90%;
 
height: 88rpx;
background: #3296FA;
border-radius: 3px;
position: fixed;
left: 5%;
bottom: 200rpx;

font-size: 34rpx;
font-family: PingFangSC-Medium, PingFang SC;
font-weight: 500;
color: #FFFFFF;
}