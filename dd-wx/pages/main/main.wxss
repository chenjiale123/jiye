/* pages/user/user.wxss */
page{
  width: 100%;
  height: auto;
  overflow: hidden;
}
.contain{
  width: 100%;
  height: 100%;
}
.contain>image{
  width: 106rpx;
  height: 46rpx;
  float: right;
  margin-right: 30rpx;
}
.item{
  width: 100%;
  height: 148rpx;
  border-bottom: 1px solid #F2F2F2;
  padding: 14rpx 30rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.item>.left>image{
 width: 80rpx;
 height: 80rpx;
}
.item>.left>.main{
  display: inline-block;
  margin-left: 20rpx;
}
.item>.left>.main>text:nth-child(1){

  font-size: 28rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #191F25;
  display: block;
}
.item>.left>.main>text:nth-child(2){

  font-size: 20rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #5A5A5A;
  display: block;
  margin-top: 10rpx;
}
.item>.right>text{

  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(0, 0, 0, 0.8);
  display: block;
}
.item>.right>.when{
  width: 234rpx;
  height: 40rpx;
  border-radius: 2px;
  border: 1px solid #3296FA;
  padding: 2rpx;
  box-sizing: border-box;
  margin-top: 10rpx;
}
.item>.right .whenin{
  width: 100%;
height: 32rpx;
background: #3296FA;
border-radius: 2px;
}