/* pages/address/address.wxss */
.map-inputtips-input{
  height: 110rpx;
  line-height: 80rpx;
  width: 100%;
  box-sizing: border-box;
  font-size: 30rpx;
  padding: 0 10px;
  background-color: #fff;
  background-color: #fff;
  display: flex;
  justify-content: space-between;
  border-bottom:1px solid #c3c3c3;
}
.map-inputtips-input input{
  width: 85%;
  height:66rpx;
  background:rgba(242,245,247,1);
  border-radius:33px;
  padding-left: 68rpx;
  position: relative;
}
.map-inputtips-input input image{
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
  margin-left: 22rpx;
  position: absolute;
  top: 13rpx;
  left: 0rpx;
  z-index: 999;
}
.map-box{
  margin: 0 10px;
  border-bottom:1px solid #c3c3c3;
  height: 80rpx;
  line-height: 80rpx;
}
.map-box:last-child{border: none;}
.map-search-list{
  position: fixed;
  top: 80rpx;
  left: 0;
  width: 100%;
  z-index: 1000;
  background-color: #fff;
}
.city{
  display: inline-block;
  font-size:26rpx;
font-family:Microsoft YaHei;
font-weight:400;
color:rgba(51,51,51,1);
width: auto;

overflow: hidden;

position: relative;
top: -12rpx;
height: 70rpx;
vertical-align: middle;
}
.city>image{
  width: 40rpx;
  height:40rpx;
  vertical-align: middle;
  float: right;
}
.map{
  width: 100%;
  height: 422rpx;
  position: relative;
}
.cover-image{
  position: fixed;
  width: 60rpx;
  height: 110rpx;
  z-index: 99999;
  left: 50%;
  top: 30%;
  margin-left: -30rpx;
  margin-top: -40rpx;
}
.address{
  width: 100%;

  box-sizing: border-box;
  height:1000rpx;
  overflow: auto;
  border-radius:30rpx 30rpx 0px 0px;
  position: relative;
  top: -30rpx;
  background-color: #fff;
 
}
.address>.Item{
  width: 100%;
  border-bottom:2rpx solid #ddd ;
  height: auto;
  overflow: hidden;
  line-height: 60rpx;
  padding: 0 30rpx;
box-sizing: border-box;
 
}

.address>.Item>image{
width: 40rpx;
height: 40rpx;
margin-right: 12rpx;
margin-top: 10rpx;
display: inline-block;
position: relative;
top: -20rpx;
}
.address>.Item>.name{
  display: inline-block;
  width: 90%;
  vertical-align: middle;
 
}
.address>.Item>.name>text:nth-child(2){
  font-size:30rpx;
font-family:Microsoft YaHei;
font-weight:400;
color:rgba(51,51,51,1);
overflow: hidden;
text-overflow:ellipsis;
white-space: nowrap;
display: block;
}
.address>.Item>.name>text:nth-child(1){
  font-size:30rpx;
  font-family:Microsoft YaHei;
  font-weight:400;
  color:rgb(51, 51, 51);
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  display: block;
}
.etc{
  color: #FF4C4F!important;
}