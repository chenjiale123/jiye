page {
 width: 100%;
 height: 100%;
 background-color: #f8f8f8;
 overflow: hidden;
}
.list-item{
  width: 94%;
  
height: 96rpx;
background: #FFFFFF;
box-shadow: 0px 4px 34rpx 0px rgba(0, 0, 0, 0.04);
border-radius: 18rpx;
margin: 20rpx auto;
padding:  0 30rpx;
box-sizing: border-box;
display: flex;
justify-content: space-between;
align-items: center;
position: relative;
}
.item-content{
  
font-size: 34rpx;
font-family: PingFangSC-Regular, PingFang SC;
font-weight: 400;
color: #191F25;
}
.icon{
  width: 50rpx;
  height: 60rpx;
}
.select{
  width: 100%;
  height: 98rpx;
  position: absolute;
  top: 98rpx;
  left: 0;
  background: #FFFFFF;
box-shadow: 0px 4px 34rpx 0px rgba(0, 0, 0, 0.04);
border-radius: 18rpx;
margin: 20rpx auto;
padding:  20rpx 30rpx;
box-sizing: border-box;

}
.group{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.weui-cell{
  width: 100%;
  height: 50%;
 
}
.weui-cell__hd{
 display: inline-block;
}
.weui-cell__bd{
  
font-size: 28rpx;
font-family: PingFangSC-Regular, PingFang SC;
font-weight: 400;
color: rgba(0, 0, 0, 0.6);
display: inline-block;
}
radio {
  width: 38rpx;
}

/* 单选框未选中 */
radio .wx-radio-input {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
}


/* 单选框选中后对勾样式 */
radio .wx-radio-input.wx-radio-input-checked::before{
  border-radius: 50%;
  width: 44rpx;
  height: 44rpx;
  line-height: 44rpx;
  text-align: center;
  font-size: 26rpx;   
  color:#fff;
  background-color: #2F87E0;
  border-color: #2F87E0;
}
.btn{
  width: 560rpx;
height: 88rpx;
background: #3296FA;
border-radius: 3px;
position: fixed;
bottom: 200rpx;
left: 50%;
margin-left: -280rpx;

font-size: 34rpx;
font-family: PingFangSC-Medium, PingFang SC;
font-weight: 500;
color: #FFFFFF;
text-align: center;
line-height: 88rpx;
}
.exit{
  width: 560rpx;
height: 88rpx;
background: #3296FA;
border-radius: 3px;
