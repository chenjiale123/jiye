.tabNav {
  width: 250%;
  display: flex;
  justify-content: space-between;
  background-color: #F8F9F9;
 height: 112rpx;
}
.include{
 overflow: auto;
  z-index: 9;
 
  width: 100%;
  height: 120rpx;
  line-height: 110rpx;
  background: #fff;
 
  border-bottom: 1px solid #f5f5f5;
  box-sizing: border-box;

}

.tabNav>view {
  text-align: center;
  margin-right: 20rpx;
  padding: 0 10rpx;
  box-sizing: border-box;
  position: relative;
  top: -12rpx;
}

.tabNav>view:last-child {
  margin-right: 0;
}

.tabNav>view text {
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 800;
  color: #BCC0C8;
}

.tabNav .cur text {
  border-bottom: 7rpx solid #3467FF;
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 800;
  color: #222222;
  padding: 4rpx;
  box-sizing: border-box;
}
.orderInfo{
width: 100%;
padding:  0 30rpx;
box-sizing: border-box;

z-index: 9;





}
.orderInfo-item{
width: 100%;
height: 299rpx;
margin-top: 38rpx;
position: relative;
display:flex;
overflow: hidden;
}

.orderInfo-item>image{
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
 display: block;

}
.orderInfo-item>.discrabe{
  margin:  auto;
  text-align: center;
  position: relative;
}
.orderInfo-item>.discrabe>text:nth-child(1){
  text-align: center;
  display: block;
  font-size: 42rpx;
font-family: PingFang SC;
font-weight: 800;
color: rgb(255, 255, 255);
text-shadow: black 0.1em 0.1em 0.2em
}

.orderInfo-item>.discrabe>text:nth-child(2){
  text-align: center;
  display: block;
  font-size: 28rpx;
font-family: PingFang SC;

color: rgb(255, 255, 255);
margin-top: 13rpx;
 text-shadow: black 0.1em 0.1em 0.2em
